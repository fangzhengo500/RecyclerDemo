<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DefaultBtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- 播放界面-Style -->
    <style name="PlayerActivityStyle" />

    <style name="PlayerActivityStyle.SeekBarText">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text_color_white</item>
    </style>

    <style name="PlayerActivityStyle.Btn">
        <item name="android:layout_width">@dimen/player_btn_size</item>
        <item name="android:layout_height">@dimen/player_btn_size</item>
    </style>


    <style name="BtnRedStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:background">@drawable/btn_red_bg</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>
</resources>
